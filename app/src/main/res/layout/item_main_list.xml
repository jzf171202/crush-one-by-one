<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_text_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="UC 创始人何小鹏退役现场" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_text_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="· 直播中" />

    <TextView
        android:id="@+id/status_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/time_end"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/status_text"
        android:background="@drawable/homepage_start_btn"
        android:gravity="center"
        android:text="开始直播"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_title"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="开始：8月21日 14：30" />

    <TextView
        android:id="@+id/time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/time_start"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="结束：8月21日 16：30" />

    <RelativeLayout
        android:id="@+id/item_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_end">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_e6e8e9" />

        <TextView
            android:id="@+id/preview_bt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_text_height"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/homepage_preview_icon"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="预览" />

        <TextView
            android:id="@+id/modify_bt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_text_height"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/homepage_modify_icon"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="修改" />
    </RelativeLayout>
</RelativeLayout>
