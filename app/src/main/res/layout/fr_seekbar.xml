<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_E2E2E2"
    android:orientation="vertical">

    <com.zjrb.sjzsw.widget.IndicatorSeekBar
        android:id="@+id/indicatorSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:max="100"
        android:maxHeight="4dp"
        android:progress="30"
        android:progressDrawable="@drawable/bg_seekbar_progress_drawable"
        android:thumb="@drawable/linear_line_stoke"
        app:textColor="@color/item_text_color"
        app:textOrientation="bottom"
        app:textSize="@dimen/text_8" />
</LinearLayout>
